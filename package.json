{
  "name": "gigcodes-nest",
  "version": "0.0.1",
  "description": "",
  "author": "Karthick K <karthick@gigcodes.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:repl": "MIKRO_ORM_ALLOW_GLOBAL_CONTEXT=true nest start --watch --entryFile repl",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose",
    "orm": "npx mikro-orm",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "prepare": "is-ci || husky",
    "migration:create": "npx mikro-orm migration:create --name=$npm_config_name"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "dependencies": {
    "@casl/ability": "^6.7.1",
    "@golevelup/nestjs-webhooks": "^0.2.18",
    "@mikro-orm/core": "^6.1.12",
    "@mikro-orm/migrations": "^6.1.12",
    "@mikro-orm/mysql": "^6.1.12",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/reflection": "^6.1.12",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/throttler": "^5.1.2",
    "@supercharge/request-ip": "^1.2.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "argon2": "^0.40.1",
    "body-parser": "^1.20.2",
    "cache-manager": "^5.5.0",
    "cache-manager-ioredis-yet": "^2.0.2",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "date-fns-tz": "^2.0.1",
    "helmet": "^7.1.0",
    "helper-fns": "^2.7.0",
    "husky": "^9.0.11",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.6.0",
    "joi": "^17.12.3",
    "nestjs-i18n": "^10.4.5",
    "nestjs-pino": "^4.0.0",
    "nestjs-throttler-storage-redis": "^0.4.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "unprofane": "^1.0.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.12.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@golevelup/ts-jest": "^0.4.0",
    "@mikro-orm/cli": "^6.1.12",
    "@mikro-orm/seeder": "^6.1.12",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@side/jest-runtime": "^1.1.0",
    "@swc/jest": "^0.2.36",
    "@types/cache-manager": "^4.0.6",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.12.4",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testTimeout": 30000,
    "moduleNameMapper": {
      "^@entities": "<rootDir>/entities/index",
      "^@mocks": "<rootDir>/_mocks_/index",
      "^@common/(.*)$": "<rootDir>/common/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@lib/(.*)$": "<rootDir>/lib/$1"
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "runtime": "@side/jest-runtime",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/common/database/mikro-orm-cli.config.ts",
      "./dist/common/database/mikro-orm-cli.config.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
